# 設定の優先順位:
# 1. 環境変数（最優先）
# 2. このYAMLファイル（config.yaml）
# 3. envDefault（コードに埋め込まれたデフォルト値）
#
# 開発環境ではenvDefaultがあるため、このファイルは不要です。
# 個人的に設定を変更したい場合のみ、このファイルをconfig.yamlにコピーして使用してください。
#
# 利用可能な環境変数:
# - DATABASE_HOST
# - DATABASE_PORT
# - DATABASE_USER
# - DATABASE_PASSWORD
# - DATABASE_NAME
# - SERVER_PORT
# - CORS_ALLOWED_ORIGINS (カンマ区切り)
# - CORS_ALLOWED_METHODS (カンマ区切り)
# - CORS_ALLOWED_HEADERS (カンマ区切り)
# - CORS_ALLOW_CREDENTIALS

server:
  port: 8080

database:
  port: "5432"
  host: "db"
  user: "myuser"
  password: "mypassword"
  name: "mydb"

cors:
  allowedOrigins:
    - "http://localhost:3000"
  allowedMethods:
    - "GET"
    - "POST"
    - "PUT"
    - "DELETE"
    - "OPTIONS"
  allowedHeaders:
    - "Content-Type"
    - "Authorization"
  allowCredentials: true
